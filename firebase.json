{
  "functions": {
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" run build"
  },
  "hosting": {
    "predeploy": [
      "ELEVENTY_ENV=prod npm run build",
      "node index-algolia.js"
    ],
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "server"
      }
    ]
  },
  "emulators": {
    "hosting": {
      "port": 8080
    },
    "functions": {
      "port": 8081
    },
    "ui": {
      "enabled": true,
      "port": 8082
    }
  }
}
